@model IEnumerable<Clothes_Shop.Models.BasketDetails>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Basket)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Basket.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Pattern)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BasketDetailsId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BasketDetailsId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BasketDetailsId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
