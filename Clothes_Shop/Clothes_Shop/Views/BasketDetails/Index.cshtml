@model IEnumerable<Clothes_Shop.Models.BasketDetails>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Koszyk</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Nazwa produktu
            </th>
            <th>
             Ilość
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>

        <td>
            <a asp-action="Edit" asp-route-id="@item.BasketDetailsId">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.BasketDetailsId">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.BasketDetailsId">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>
