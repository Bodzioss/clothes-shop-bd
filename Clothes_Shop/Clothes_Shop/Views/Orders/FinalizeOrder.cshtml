@model Clothes_Shop.Models.Orders

@{
    ViewData["Title"] = "Składanie zamówienia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<script src="~/lib/jquery/dist/jquery.js"></script>
<link href="~/css/site.css" rel="stylesheet" />

<div class="container m-auto" style="text-align: center;align-content: center">
    <h1>Składanie zamówienia</h1>

    <h4>Wybierz odpowiednie opcje</h4>
    <hr />
    <div class="container align-content-center m-auto">
    <div class="row justify-content-center" style="">
        <div class="col-md-4">
            <form asp-action="FinalizeOrder">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="OrderId" />
                <input type="hidden" asp-for="UserId" />
                <div class="form-group">
                    <label value="Rodzaj płatności" class="control-label"></label>
                    <input asp-for="PaymentType" class="form-control" />
                    <span asp-validation-for="PaymentType" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="PaymentStatus" />
                <input type="hidden" asp-for="PaymentStatus" />
                <input type="hidden" asp-for="OrderDate" />
                <input type="hidden" asp-for="ShipDate" />
                <div class="form-group">
                    <label value="Dostawa" class="control-label"></label>
                    <select asp-for="ShipperId" class="form-control" asp-items="ViewBag.ShipperId"></select>
                    <span asp-validation-for="ShipperId" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Discount" />
                <div class="form-group">
                    <label value="Dodatkowe informacje" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Zapisz" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}